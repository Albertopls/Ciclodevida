<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <View
        android:id="@+id/division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="#c8c9cb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="Iniciar Sesión"
        android:layout_below="@id/division"/>
    <EditText

        style="@style/Edittext"
        android:id="@+id/nombre"
        android:layout_below="@id/texto"
        android:hint="Nombre"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:id="@+id/contraseña"
        android:textSize="13dp"
        android:layout_below="@id/nombre"
        android:background="@drawable/disenio_edit_text"
        android:hint="Contraseña" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordarme"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="Recordarme"
        android:theme="@style/checkbox"
        android:layout_below="@id/contraseña"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto2"
        android:text="¿Olvidaste tu Contraseña?"
        android:layout_below="@id/recordarme"
        android:layout_toRightOf="@id/recordarme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto2">

        <Button

            style="@style/BotonesDialog"
            android:id="@+id/cancelar"
            android:text="Cancelar"

            android:layout_below="@id/texto2"
            android:layout_marginTop="30dp"/>
        <Button
            style="@style/BotonesDialog"
            android:id="@+id/aceptar"
            android:text="Aceptar"


            android:textColor="#ffffff"
            android:layout_below="@id/texto2"
            android:layout_marginTop="30dp"/>



    </LinearLayout>





</RelativeLayout>